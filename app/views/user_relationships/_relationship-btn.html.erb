<% if user_signed_in? %>
  <span>
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to 'フォロー外す', unfollow_path(user.id), method: :post, remote: true %>
      <% else %>
        <%= link_to 'フォローする', follow_path(user.id), method: :post, remote: true %>
      <% end %>
    <% end %>
  </span>
<% end %>