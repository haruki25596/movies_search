<% if current_user.good?(movie_id) %>
  <%= link_to good_path(movie_id: movie_id),method: :delete, remote: true, class: "fas fa-thumbs-up" do %>
    <%= goods_count %>
  <% end %>
<% else %>
  <%= link_to good_path(movie_id: movie_id),method: :post, remote: true, class: "fas fa-thumbs-up" do %>
    <%= goods_count %>
  <% end %>
<% end %>
<% if current_user.bad?(movie_id) %>
  <%= link_to bad_path(movie_id: movie_id),method: :delete, remote: true, class: 'fas fa-thumbs-down' do %>
    <%= bads_count %>
  <% end %>
<% else %>
  <%= link_to bad_path(movie_id: movie_id),method: :post, remote: true,  class: 'fas fa-thumbs-down'  do %>
    <%= bads_count %>
  <% end %>
<% end %>