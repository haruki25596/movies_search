<table class='table'>
  <tr><%= attachment_image_tag(@user, :image, :fill, 100, 100, fallback: "no_profile_image.jpg") %></tr>
  <tr>
	  <th>name</th><th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to @user.following_user.count, followed_user_path(user.id) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to @user.follower_user.count, follower_user_path(user.id) %></th>
  </tr>
</table>