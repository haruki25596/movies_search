<div class="container">
  <div class="row">
    <div class="mt-5 col-md-12">
        <table>
           <tbody>
             <% if @reviews.present? %>
             <% @reviews.each do |review| %>
                <tr>
                   <td>
                     <%= link_to user_path(review.user.id) do %>
                       <%= attachment_image_tag review.user,  :image,  fallback: "no_profile_image.jpg", class:"mt-3 rounded-circle", size: "50x50" %>
                       <br><%= review.user.name %></br>
                     <% end %>
                   </td>
                   <td><%= review.body %></td>
                   <td>
                     <div id="star-rate-<%= review.id %>"></div>
                      <script>
                      $('#star-rate-<%= review.id %>').raty({
                        size: 36,
                        starOff:  '<%= asset_path('star-off.png') %>',
                        starOn : '<%= asset_path('star-on.png') %>',
                        starHalf: '<%= asset_path('star-half.png') %>',
                        half: true,
                        readOnly: true,
                        score: <%= review.rate %>,
                        scoreName: 'review[rate]'
                      });
                      </script>
                      <style>
                        td img {
                          width: 10px;
                          height: 10px;
                        }
                      </style>
                   </td>
                   <td>評価：<%= review.rate %>点 | <%= review.title %></td>
                   <td>
                     <% if current_user == review.user %>
                       <%= link_to '口コミを編集', edit_review_path(review), method: :get, class:'btn btn-primary' %>
                       <%= link_to '口コミを削除', review, method: :delete, class:'btn btn-danger' %>
                     <% end %>
                   </td>
                </tr>
             <% end %>
            <% end %>
          </tbody>
        </table>
     </div>
  </div>
</div>
