<div class="container">
  <h2 class="mt-5">この作品にレビューを投稿する</h2>
  <div class="row">
    <div class="mt-8 col-md-4">
        <span><%= image_tag 'https://image.tmdb.org/t/p/w1280' + @movie['poster_path'], class: "card-img" %></sapn>
    </div>
    <div class="row">
      <p class="col-md-10">作品タイトル:</p>
      <p class="col-md-5"><%= @movie['title'] %></p>
    </div>
</div>
<%= form_with model: @review,  local:true do |f| %>
    <div class="form-group">
      <label>投稿された感想・評価</label>
      <br><%= f.text_area :body, class: "form-control"%></br>
    </div>
      <br><%= f.submit "投稿する" %></br>
<% end %>
<table>
   <tbody>
     <% @reviews.each do |review| %>
       <tr>
         <td>
           <%= link_to user_path(review.user.id) do %>
             <%= attachment_image_tag review.user,  :image,  fallback: "no_profile_image.jpg", class:"mt-3 rounded-circle", size: "40x40" %>
             <br><%= review.user.name %></br>
           <% end %>
         </td>
         <td><%= review.body %></td>
         <td>
           <% if book_comment.user == current_user %>
             <%= link_to "Destroy",review_path(review_id: review.id), class: 'btn btn-sm btn-danger', method: :delete, remote: true  %>
           <% end %>
         </td>
       </tr>
     <% end %>
   </tbody>
</table>

