<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <table class='table'>
            <tr><%= attachment_image_tag(@user, :image, :fill, 100, 100, fallback: "no_profile_image.jpg") %></tr>
            <tr>
  	           <th>name</th><th>
  	             <%= @user.name %></th>
            </tr>
            <tr>
  	           <th>introduction</th>
  	           <th><%= @user.introduction %></th>
            </tr>
            <tr>
              <th>follows</th>
              <th><%#= link_to @user.following_user.count, followed_user_path(user.id) %></th>
            </tr>
            <tr>
              <th>followers</th>
              <th><%#= link_to @user.follower_user.count, follower_user_path(user.id) %></th>
            </tr>
        </table>
        <div>
          <% if @user.id == current_user.id %>
            <p><%= link_to "編集する", edit_user_path(@user), class: 'btn btn-sm btn-success' %></p>
          <% end %>
        </div>
    </div>
  </div>
</div>




