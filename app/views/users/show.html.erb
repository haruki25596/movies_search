<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <table class='table'>
            <tr><%= attachment_image_tag(@user, :image, :fill, 100, 100, fallback: "no_profile_image.jpg") %></tr>
            <tr>
  	           <th>氏名</th><th>
  	             <%= @user.name %></th>
            </tr>
            <tr>
  	           <th>自己紹介</th>
  	           <th><%= @user.introduction %></th>
            </tr>
            <tr>
              <th>フォロー数</th>
              <th><%= link_to @user.following_user.count, followed_user_path(@user.id) %></th>
            </tr>
            <tr>
              <th>フォロワー数</th>
              <th><%= link_to @user.follower_user.count, follower_user_path(@user.id) %></th>
            </tr>
            <tr>
              <th>高評価をつけた映画作品</th>　   <!--Good評価-->
              <th><%= @goods_count%></th>  <!--Bad評価-->
            </tr>
            <tr>
              <th>低評価をつけた映画作品</th>
              <th><%= @bads_count%></th>
            </tr>
        </table>
        <div>
          <% if @user.id == current_user.id %>
            <p><%= link_to "編集する", edit_user_path(@user), class: 'btn btn-sm btn-success' %></p>
          <% end %>
        </div>
    </div>
  </div>
</div>




