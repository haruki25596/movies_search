<% if @users.count > 0 %>
 <table class='table'>
   <thead>
     <tr>
       <th>image</th>
       <th>name</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <% @users.each do |user| %>
       <tr>
         <td><%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no_profile_image") %></td>
         <td><%= user.name %></td>
         <td>フォロー数: <%= user.following_user.count %></td>
         <td>フォロワー数: <%= user.follower_user.count %></td>
         <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
 <% else %>
  <p>ユーザーはいません</p>
<% end %>